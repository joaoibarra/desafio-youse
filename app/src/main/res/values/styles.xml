<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextListName" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorListName</item>
        <item name="android:textSize">@dimen/listName</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextListTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorListTitle</item>
        <item name="android:textSize">@dimen/listTitle</item>
    </style>

    <style name="TextListCount" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorListCount</item>
        <item name="android:textSize">@dimen/listCount</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextListAuthor" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorListAuthor</item>
        <item name="android:textSize">@dimen/listAvatar</item>
    </style>

</resources>
